{
  "name": "btlivestream-react",
  "version": "1.0.0",
  "description": "BT Live Stream - Peer-to-peer video call platform",
  "private": true,
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sweetalert2": "^11.10.4",
    "uuid": "^9.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "db:init": "node scripts/initDatabase.js",
    "db:reset": "node scripts/resetDatabase.js",
    "db:setup": "npm run db:reset && npm run db:init",
    "dev": "concurrently \"npm run server:dev\" \"npm start\"",
    "build:react": "react-scripts build",
    "start:prod": "npm run build:react && node server.js",
    "postbuild": "npm run build:react || true"
  },
  "engines": {
    "node": "18.16.0",
    "npm": ">=8.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "react-devtools": "^7.0.1"
  },
  "proxy": "http://localhost:5001"
}
